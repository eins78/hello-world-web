{
  "workspaces": {
    "packages/app": {
      "entry": [
        "src/**",
        "public/**"
      ]
    },
    "packages/e2e-tests": {
      "entry": [
        "playwright.config.ts",
        "steps/**/*.ts",
        "pages/**/*.ts",
        "utils/**/*.ts"
      ]
    },
    "packages/lit-ssr-demo": {
      "entry": [
        "src/entry-*.ts",
        "src/components/index.ts"
      ]
    }
  },
  "ignore": [
    "packages/app/public/lit-ssr-demo/**/*",
    ".github/workflows/**/*",
    "packages/e2e-tests/.features-gen/**/*",
    "packages/e2e-tests/features/**/*"
  ]
}
