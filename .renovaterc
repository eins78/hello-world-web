{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:recommended",
    "group:linters",
    "group:test",
    "group:allNonMajor",
    "workarounds:typesNodeVersioning",
    "workarounds:nodeDockerVersioning",
    ":dependencyDashboard"
  ],
  "assignees": [
    "eins78"
  ],
  "reviewers": [
    "eins78"
  ],
  "schedule": ["* 7-18 * * 5"],
  "timezone": "Europe/Berlin",
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Restrict Node.js to LTS versions only (currently v22, prevent v24 Current)",
      "matchPackageNames": ["node", "@types/node"],
      "matchDatasources": ["node-version", "npm", "docker"],
      "allowedVersions": "<23",
      "prPriority": 10
    },
    {
      "description": "Require manual approval for major updates via dependency dashboard",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "matchFileNames": [
        "package.json"
      ],
      "labels": [
        "app"
      ]
    },
    {
      "matchFileNames": [
        "test/package.json"
      ],
      "labels": [
        "test"
      ]
    },
    {
      "matchFileNames": [
        "src/views/lit-ssr-demo/package.json"
      ],
      "labels": [
        "lit-ssr-demo"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "groupName": "lit-packages",
      "matchPackageNames": [
        "lit",
        "lit-html",
        "lit-element",
        "@lit/**",
        "@lit-labs/**"
      ]
    }
  ]
}
