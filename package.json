{
  "name": "hello-world-web",
  "version": "1.3.1-rc.1",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "type": "module",
  "bin": {
    "hello-world-web": "./dist/bin/www.js",
    "healthcheck": "./dist/bin/healthcheck.js"
  },
  "scripts": {
    "start": "DEBUG='hello-world-web:*' NODE_ENV=production node ./dist/bin/www",
    "dev": "npm-run-all --parallel dev:server dev:watch dev:tests",
    "dev:server": "DEBUG='hello-world-web:*' nodemon -d 1.0 -e html,ts,tsx,js,css,json,env -w '**/*' -w .env --exec tsx ./src/bin/www.ts",
    "dev:watch": "pnpm -F hello-world-web-lit-ssr-demo run watch",
    "dev:tests": "pnpm -F ./tests i && pnpm -F ./test dev",
    "dist": "pnpm run ci",
    "clean": "rimraf dist src/views/lit-ssr-demo/lib",
    "ci": "npm-run-all --serial clean ci:build-and-lint ci:e2e",
    "ci:build-and-lint": "npm-run-all --parallel build lint",
    "ci:e2e": "cross-env PORT=11111 start-server-and-test start http://localhost:11111 test",
    "dev-trace-sync-io": "cross-env-shell 'export NODE_OPTIONS='--trace-sync-io' && $npm_execpath run dev:server'",
    "build": "npm-run-all --serial build:lit-ssr-demo build:server",
    "build:server": "tsc -p tsconfig.server.json",
    "build:lit-ssr-demo": "pnpm -F hello-world-web-lit-ssr-demo i && pnpm -F hello-world-web-lit-ssr-demo run build",
    "postinstall": "pnpm -F ./test i && pnpm run build",
    "lint": "npm-run-all --parallel lint:eslint lint:types lint:knip",
    "lint:knip": "knip",
    "lint:eslint": "eslint",
    "lint:types": "tsc --noEmit -p tsconfig.json -p tsconfig.server.json",
    "cy": "pnpm -F ./test cy",
    "test": "pnpm run test:e2e",
    "test:e2e": "pnpm -F ./test test",
    "knip": "knip"
  },
  "dependencies": {
    "@lit-labs/ssr": "^3.2.2",
    "cookie-parser": "~1.4.6",
    "debug": "~4.4.0",
    "dotenv": "^16.4.5",
    "express": "~4.21.0",
    "lit-html": "^3.1.4",
    "morgan": "~1.10.0",
    "npm-run-all2": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.8.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/debug": "^4.1.12",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^4.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-testing-library": "^7.0.0",
    "globals": "^15.9.0",
    "knip": "^5.38.3",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "start-server-and-test": "^2.0.5",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json",
    "package-lock.json"
  ],
  "engines": {
    "node": ">=22.7.0"
  },
  "packageManager": "pnpm@9.15.0+sha512.76e2379760a4328ec4415815bcd6628dee727af3779aaa4c914e3944156c4299921a89f976381ee107d41f12cfa4b66681ca9c718f0668fa0831ed4c6d8ba56c"
}
